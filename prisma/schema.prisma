datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator kysely {
  provider = "prisma-kysely"
  output = "../packages/core/server/db/types"
  fileName = "index.ts"
}

model User {
  id Int @id @default(autoincrement())

  username String
  password String

  characters Character[]

  @@map("users")
}

model Character {
  id Int @id @default(autoincrement())

  name String
  lastname String

  sex CharecterSex

  userId Int @map("user_id")
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("characters")
}

enum CharecterSex {
  FEMALE
  MALE
}

